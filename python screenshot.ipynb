    "from PIL import ImageGrab\n",
    "\n",
    "# Take a screenshot of the entire screen\n",
    "screenshot = ImageGrab.grab()\n",
    "\n",
    "# Save the screenshot to a file\n",
    "screenshot.save(\"screenshot.png\")\n",
    "\n",
    "# Optional: Display the screenshot\n",
    "screenshot.show()"
